<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreferenceCompat
        android:key="dark_mode"
        android:title="Dark Mode"
        android:summary="Enable dark mode"
        android:defaultValue="false" />

    <SwitchPreferenceCompat
        android:key="kilometers_to_miles"
        android:title="Kilometers to Miles"
        android:summary="Convert distances to miles"
        android:defaultValue="false" />

    <SwitchPreferenceCompat
        android:key="pounds_to_kilograms"
        android:title="Pounds to Kilograms"
        android:summary="Convert weights to kilograms"
        android:defaultValue="false" />

    <MultiSelectListPreference
        android:key="top_workout_types"
        android:title="Top 3 Workout Types"
        android:summary="Select your top 3 workout types"
        android:entries="@array/workout_types"
        android:entryValues="@array/workout_types_values"
        android:defaultValue="@array/default_workout_types" />
</PreferenceScreen>